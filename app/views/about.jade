.md-padding
  .about(ng-cloak='')
      md-grid-list(md-cols-sm='1', md-cols-md='2', md-cols-gt-md='4', md-row-height-gt-md='1:1', md-row-height='2:2', md-gutter='12px', md-gutter-gt-sm='8px')
        md-grid-tile.gray(md-rowspan='3', md-colspan='2', md-colspan-sm='1')
          md-grid-tile-footer(style="background-color: #fff6e5")
            h3 #1: (3r x 2c)
        md-grid-tile.green(ng-repeat="developer in developers" style="background-image: url('{{developer.img_url}}'); background-repeat: no-repeat; background-size: 100% 100%; height: 50px;")
          md-grid-tile-footer(style="background-color: #424242; padding: 2.5em 0.2em; opacity: 0.8")
            h3(style="color: #fefefe") {{developer.name}}
            h3(style="color: #fefefe") Position : {{developer.title}}
