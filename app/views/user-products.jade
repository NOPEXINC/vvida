md-card-content.content(ng-if="currentUser" ng-init="init()")
  h1 Items
  p.md-headline {{message}}
  div(ng-repeat='item in items.Items')
    div
      div(layout-gt-sm="row" layout='column' layout-align-gt-sm='start start' layout-align='start center')
        .md-padding
          md-card.ripple-container.prof-child-img(md-ink-ripple flex)
            .card-images.md-card-image(style="background-image: url({{item.Images[0].img_url}});")
        div.md-padding(flex layout='column' layout-align-gt-sm='start start' layout-align='start center')
          p.md-headline.packed-bottom.bold-title {{item.name}}
          p.packed
            span.fa.fa-list   {{item.Category.type}}
              md-tooltip Category
          p.packed
            span.fa.fa-commenting   {{item.Reviews.length}}
              md-tooltip Reviews
      p {{item.description}}
        md-tooltip Item Description
    md-divider.prof-divider
  md-button.md-fab.add-event-btn(ng-click="addItemModal($event)")
    span.fa.fa-plus
    md-tooltip(md-direction='left') Add a new item
