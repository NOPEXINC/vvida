.add-items( layout='column', style='padding-bottom: 20px;')
  div(ng-cloak='')
    md-content.md-padding
      md-tabs.md-dynamic-height
        md-tab(label='Add Product')
          md-content.md-padding
            md-card(layout="column" flex="55")
              br
              md-card-content
                form(method='post' ng-submit="addItem()")
                  md-input-container
                    md-icon(class="fa fa-envelope ")
                    input(type='text', placeholder='Item Name', ng-required='true')
                  md-input-container
                    md-icon(class="fa fa-envelope ")
                    input(type='text', placeholder='Item Description' ng-required='true')
                  md-button.md-raised.md-warn(type='submit')
                    i(class="fa fa-send")
                    | Add this Product
            br
            br
            section(layout='row', layout-sm='column', layout-align='center center', layout-wrap='')
              md-button.md-raised.md-primary.md-hue-2(class='third-party-button')
                i(class="fa fa-facebook")
                | Add Product
              md-button.md-raised.md-warn(class='third-party-button')
                i(class="fa fa-google-plus")
                | Edit Product