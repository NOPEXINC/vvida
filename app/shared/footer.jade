.footer.hide-sm(ng-controller="FooterCtrl" layout="column")
  .md-padding(layout="row" layout-md="column" layout-sm="column" flex layout-align="center")
    .nav-links(flex-gt-md="50" layout="row" layout-align="center" flex="100")
      .footer-item-group(layout="column")
        .md-title.footer-titles About
        div.footer-links(ng-repeat="aboutItem in about" ui-sref="{{aboutItem.state}}", aria-label="aboutItem.name") {{aboutItem.name}}

      .footer-item-group(layout="column")
        .md-title.footer-titles Discover
        div.footer-links(ng-repeat="item in discover" ui-sref="{{item.state}}", aria-label="item.name") {{item.name}}

      .footer-item-group(layout="column")
        .md-title.footer-titles Business
        div.footer-links(ng-repeat="item in business" ui-sref="{{item.state}}", aria-label="item.name") {{item.name}}

    md-divider.md-inset

    .social_icons(layout="column" flex-gt-md="50" flex="100" layout-align="center")  
      .md-headline.footer-titles Join Us
      md-divider.socials.md-inset
      div(layout="row" layout-md="row" layout-sm="column")
        span.fa.fa-google-plus-square.fa-3x.text-white
        span.fa.fa-facebook-square.fa-3x.text-white
        span.fa.fa-twitter-square.fa-3x.text-white
        span.fa.fa-instagram.fa-3x.text-white
        span.fa.fa-linkedin-square.fa-3x.text-white
        span.fa.fa-pinterest-square.fa-3x.text-white
        span.fa.fa-youtube-square.fa-3x.text-white

  md-divider
