md-card.jumbotron.search-jumbotron
  .jumbotron-image.md-card-image
    .image-overlay
      .search(layout="column" layout-margin layout-align="center center")
        p.jumbotron-word Find exciting events to attend and new places to visit
        .search-div(layout="row" flex)
          md-input-container.md-block(md-no-float).hide-sm
            input(type="text" ng-model="search.searchItem" placeholder="Hotels, clubs, food, transport or anything you like")
          md-input-container.md-block(md-no-float).hide-gt-sm
            input(type="text" style="font-size:25px;" ng-model="search.searchItem" placeholder="Find Places and events").md-input
          md-button.md-raised.md-accent(md-no-ink id="search") Search
.sections(layout="column" flex-xs flex-gt-xs="50")
  div.eventsHeader
    span Events
  div.tabCards(ng-if="events.length > 0" layout="row" layout-sm="column" flex  layout-align="start center")
    md-card(ng-repeat="event in events | limitTo : 3" flex flex-md="45" flex-gt-md="{{events.length > 0? \"\": \"25\"}}" back-img="{{event.Images[0].img_url}}"
     ).eventcards
      md-card-title-event.overlay.cardElements
        md-card-title-text(layout="column" layout-align="end start")
          span.md-subheadline.name.visited(ui-sref="viewItem({id: event.id})") {{event.name}}
          span.md-subhead.category.eventVenue
            i.fa.fa-map-marker.brandColour &nbsp;
            span {{event.location}} , {{event.venue}}
          span.md-subhead.category.eventDescription {{event.description}}
          span.md-subhead.category.eventTimeLeft
            i.fa.fa-clock-o.brandColour &nbsp;
            span 500 days left
.sections(layout="column" flex-xs flex-gt-xs="50")
  div.eventsHeader
    span Products
  div.tabCards(ng-if="items.length > 0" layout="row" layout-sm="column" flex  layout-align="start center")
    md-card(ng-repeat="item in items | limitTo : 3" flex flex-md="45" flex-gt-md="{{items.length > 0? \"\": \"25\"}}" back-img="{{item.Images[0].img_url}}"
     ).eventcards
      md-card-title-event.overlay.cardElements
        md-card-title-text(layout="column" layout-align="end start")
          span.md-subhead.category.visited(ui-sref="viewItem({id: item.id})") {{item.name | ngClipText : 70}}
          span.md-subheadline.name.eventDescription {{item.description}}
          span.md-subhead.category.eventDescription
          span.md-subhead.category.eventTimeLeft
div.seperateFooter

