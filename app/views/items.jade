div.not-loggedin-div(ng-if='!currentUser')
  md-card.profile-body.edit-profile(layout='column' layout-align='center center')
    div.profile-pic
      img(src='images/lock.png')
    p.md-headline.packed-bottom You are currently not logged in.
    p.md-headline.packed-top Click below to login or signup  to continue using vvida.
    md-button.login-btn(class="md-raised md-primary" aria-label='Login/Signup' ng-click='login()') Go to Login/Signup Page

md-card.items(layout='column' layout-md="column" layout-sm="column")
  br
  md-card-content.content
    h4.showProducts  Products {{appendCat}}

div.showProducts(ng-if='currentUser' layout="row")
  div(layout="row")
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="left" md-is-locked-open="$mdMedia('gt-md')")
      md-toolbar
        h1.md-toolbar-tools(ng-click="resetCat()") All Categories
      md-content(layout-padding)
        md-button.btn-style(hide-gt-md ng-click="close()") Close Navbar
        md-button.btn-style(md-no-ink ng-repeat="category in categories" ng-click="setCategory(category)") {{category.type}}
        
  div.items(flex layout-wrap="layout-wrap" ng-if="!category")
    span.md-padding Recent Products 
    md-content.md-padding(layout="row" layout-wrap layout-align="center start" layout-xs="column")
      div(flex='50' flex-sm='100' layout='column' ng-repeat="item in items | limitTo : 4")
        md-card('style:background:white')
          img(ng-src='{{item.Images[0].img_url}}' class="md-card-image" alt="Image")
          md-card-title
            md-card-title-text 
              span.md-headline(ng-click="viewItem(item)") {{item.name}}
          md-card-content
            p {{item.description}}    
          md-card-actions(layout="row" layout-align="start center")
            md-button.btn-style(ng-if="currentUser") Add Review

  div(layout="column" ng-if="category")
    md-content.md-padding(layout="column" layout-wrap="layout-wrap" layout-align="center start")
      md-list
        md-list-item.md-3-line(ng-repeat="item in items | filter: {'category_id' : category}")
          img.face(ng-src="{{item.Images.length}}? {{item.Images[0].url}} : {{}}")
          .md-list-item-text
            h3(ng-click="viewItem(item)") {{item.name}} 
            h4 {{item.location}}
            p {{item.description}}
          md-divider(md-inset ng-if="!$last")
        