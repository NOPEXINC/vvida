div.md-padding(layout="row" ng-init="getItem()")
  a.md-subheadline(ui-sref="items") Products
  a.md-subheadline(ui-sref="categoryItems({catId: item.category_id})") &nbsp;> {{item.Category.type}}
  a.md-subheadline &nbsp; > {{item.name}}

.view-item(layout="row" layout-align="start center")
  h3.md-padding {{item.name}} -
  p {{item.city}}

div(layout="row")
  div.view-item-main(flex="60" layout-align="start center")
    md-grid-list(md-cols-sm="1", md-cols-md="3", md-cols-gt-md="3", md-row-height-gt-md="1:1", md-row-height="1:1", md-gutter="12px", md-gutter-gt-sm="8px")
      md-grid-tile(ng-repeat="image in images" style="background-image: url(\"{{image.img_url}}\"); background-repeat: no-repeat; background-size: 100% 100%;")

  md-content(flex="35" layout-padding)
    md-list
      md-list-item.md-3-line(ng-repeat="review in item.Reviews")
        .md-list-item-text
          h4 {{review.review}} 
          h4 {{review.review_title}}
          p {{review.rating}}
    div
      form(method="post" enctype="multipart/data" ng-submit="addItemReview()")
        md-input-container
          label Review
          input(required ng-model="itemReview.review")
        md-input-container
          label Title
          input(required ng-model="itemReview.review_title")
        md-input-container
          label Rating
          input(required ng-model="itemReview.rating")
        md-button.md-raised.md-accent(type="submit" ng-disabled= "{{!currentUser? \"true\" : \"false\"}}") Submit Review
        md-button.login-btn(class="md-raised md-primary" aria-label="Login/Signup" ng-show="!currentUser" ui-sref="login") Go to Login/Signup Page

        



